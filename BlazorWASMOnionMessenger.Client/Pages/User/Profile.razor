@page "/profile"
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]


<h3>User Profile</h3>

<RadzenColumn Size="12" SizeSM="6">
    <RadzenStack>
            <RadzenLabel Text="Id" />
            <RadzenTextBox Disabled @bind-Value="userDto.Id" />

             <RadzenLabel Text="Username" />
             <RadzenTextBox @bind-Value="userDto.UserName" />

             <RadzenLabel Text="First Name" />
             <RadzenTextBox @bind-Value="userDto.FirstName" />

             <RadzenLabel Text="Last Name" />
             <RadzenTextBox @bind-Value="userDto.LastName" />

             <RadzenLabel Text="PhoneNumber" />
             <RadzenTextBox @bind-Value="userDto.PhoneNumber" />

             <RadzenButton Text="Update Profile" Click="UpdateProfile" ButtonType="ButtonType.Submit" />
    </RadzenStack>
</RadzenColumn>
    
