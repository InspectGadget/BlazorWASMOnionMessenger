@page "/login"
<h3>Login</h3>

@if (ShowAuthError)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}

<EditForm Model="userLoginDto" OnValidSubmit="HandleLogin" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />

    <div class="form-group row rz-pb-2">
        <label for="username" class="col-md-2 col-form-label">UserName:</label>
        <div class="col-md-10">
            <InputText id="username" class="form-control" @bind-Value="userLoginDto.UserName" />
            <ValidationMessage For="@(() => userLoginDto.UserName)" />
        </div>
    </div>

    <div class="form-group row rz-pb-2">
        <label for="password" class="col-md-2 col-form-label">Password:</label>
        <div class="col-md-10">
            <InputText type="password" id="password" class="form-control" @bind-Value="userLoginDto.Password" />
            <ValidationMessage For="@(() => userLoginDto.Password)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</EditForm>